    }

    header {
      background: #ffffff;
      border-bottom: 1px solid #e5e7eb;
      padding: 16px 24px;
      display: flex;
      align-items: center;
      gap: 16px;
    }

    header img {
      height: 48px;
    }

    header .title {
      font-size: 1.1rem;
      font-weight: 600;
      color: var(--uff-blue);
    }

    main {
      max-width: 900px;
      margin: 24px auto;
      background: #ffffff;
      border-radius: 10px;
      padding: 32px;
      box-shadow: 0 10px 25px rgba(0,0,0,0.05);
    }

    .prova-info {
      display: flex;
      justify-content: space-between;
      margin-bottom: 24px;
    }

    .badge {
      background: var(--uff-blue);
      color: white;
      padding: 6px 12px;
      border-radius: 999px;
      font-size: 0.85rem;
    }

    .timer {
      font-weight: bold;
      color: #b91c1c;
    }

    .questao {
      margin-bottom: 32px;
    }

    .alternativas label {
      display: block;
      margin-bottom: 8px;
    }

    .correlacao {
      margin-top: 12px;
    }

    .par {
      display: flex;
      align-items: center;
      gap: 16px;
      margin-bottom: 8px;
    }

    .par span {
      flex: 1;
      font-weight: 500;
    }

    .par select {
      flex: 1;
      padding: 6px;
    }

    .erro {
      color: #b91c1c;
      font-weight: bold;
      text-align: center;
      margin-bottom: 16px;
    }

    .btn {
      display: block;
      margin: 32px auto 0;
      padding: 12px 24px;
      font-size: 1rem;
      background: var(--uff-blue);
      color: white;
      border: none;
      border-radius: 8px;
      cursor: pointer;
    }
